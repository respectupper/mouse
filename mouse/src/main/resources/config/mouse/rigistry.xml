<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
       http://dubbo.apache.org/schema/dubbo
       http://dubbo.apache.org/schema/dubbo/dubbo.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="${dubbo.app.name}" />

    <!-- 使用multicast广播注册中心暴露服务地址 -->
    <dubbo:registry id="mouse_prd" protocol="zookeeper" address="${dubbo.registry.address}" group="${dubbo.group}"/>

    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20880" />

    <!-- 服务订阅通用配置 -->
    <dubbo:consumer check="false" filter="clientTraceFilter" />

    <!-- 服务发布通用配置，包括超时时间、重试方式、版本、对应发布的注册中心 -->
    <dubbo:provider filter="serverTraceFilter" />
</beans>